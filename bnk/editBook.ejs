<% include('layout') %>
    <form action="/books/edit/<%= book._id %>" method="POST">
        <label>Title: <input type="text" name="title" value="<%= book.title %>" required></label>
        <label>Author: <input type="text" name="author" value="<%= book.author %>" required></label>
        <label>Description: <textarea name="description"><%= book.description %></textarea></label>
        <label>Price: <input type="number" name="price" value="<%= book.price %>" required></label>
        <button type="submit">Update Book</button>
    </form>